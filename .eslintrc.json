{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Postmate": false,
    "XLSX": false
  },
  "rules": {
    "capitalized-comments": "off",
    "quotes": ["warn", "single"],
    "no-unused-expressions": "off",
    "no-console": "warn",
    "no-unused-vars": "off",
    "quote-props": ["warn", "consistent-as-needed"]
  }
}
