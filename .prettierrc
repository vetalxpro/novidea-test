{
  "trailingComma": "none",
  "singleQuote": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc",
        "tabWidth": 2,
        "singleAttributePerLine": false,
        "printWidth": 200
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html",
        "singleAttributePerLine": false,
        "tabWidth": 2,
        "printWidth": 200
      }
    },
    {
      "files": "*.cls",
      "options": {
        "singleAttributePerLine": false,
        "tabWidth": 4,
        "printWidth": 80,
        "apexInsertFinalNewline": false
      }
    }
  ]
}
